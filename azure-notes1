'PRADHISHA-RG'
â” new-AzVM -Name "abhi-vm" # Creates a new virtual machine named 'abhi-vm' in the
current resource group
â” new-AzVM -Name "abhi-vm" # Creates a new virtual machine named 'abhi-vm'
(repeated)
â” new-AzVM -Name "abhi-vm" # Creates a new virtual machine named 'abhi-vm'
(repeated)
â” new-AzVM -Name "abhi-vm" # Creates a new virtual machine named 'abhi-vm'
(repeated)
â” remove-AzVM -Name "abhi-vm" -ResourceGroupName "abhi-resource-group" # Removes the
'abhi-vm' VM from the 'abhi-resource-group' resource group
â” get-AzVM # Lists all virtual machines again after deletion
